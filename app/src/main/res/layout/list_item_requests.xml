<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/request_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_letter"
        android:scaleType="fitCenter"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/request_item_user_name"
            style="@style/LabsTheme.v21.Text.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rodrigo Rodriguez Rodriguez" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/request_item_user_id"
                style="@style/LabsTheme.v21.Text.Body1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:text="A01234567" />

            <TextView
                android:id="@+id/request_item_user_date"
                style="@style/LabsTheme.v21.Text.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/11/2014" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>