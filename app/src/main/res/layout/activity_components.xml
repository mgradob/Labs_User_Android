<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itesm.labs.labsuser.activities.activities.ComponentsActivity">

    <LinearLayout
        android:id="@+id/activity_components_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@color/material_orange"
        android:padding="16dp"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/activity_components_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_career"
            android:layout_gravity="center_horizontal"
            android:transitionName="@string/ActivityComponentsIconTransitionName"/>

        <TextView
            android:id="@+id/activity_components_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holisss"
            android:layout_marginTop="8dp"
            style="@style/LabsTheme.v21.Light.Text.Title"
            android:transitionName="@string/ActivityComponentsTitleTransitionName"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/activity_components_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/activity_components_toolbar"
        android:animateLayoutChanges="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_components_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_components_list"
        android:layout_alignRight="@+id/activity_components_list"
        android:layout_margin="16dp"
        android:src="@drawable/ic_career"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorRipple="@color/primary_dark" />

</RelativeLayout>
