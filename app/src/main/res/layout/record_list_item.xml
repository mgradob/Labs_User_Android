<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_item_category_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CATEGORY_NAME"
            style="@style/LabsTheme.v21.Text.Subhead"/>

        <TextView
            android:id="@+id/record_item_component_name_note"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="COMPONENT_NAME_NOTE"
            style="@style/LabsTheme.v21.Text.Body1"/>

        <TextView
            android:id="@+id/record_item_component_quantity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="COMPONENT_QUANTITY"
            style="@style/LabsTheme.v21.Text.Body1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_item_date_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE_OUT"
            android:gravity="right"
            style="@style/LabsTheme.v21.Text.Subhead"/>

        <TextView
            android:id="@+id/record_item_date_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE_IN"
            android:gravity="right"
            style="@style/LabsTheme.v21.Text.Body1"/>

    </LinearLayout>

</RelativeLayout>